apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: acme-challenge
  namespace: mattermost
spec:
  parentRefs:
  - name: mattermost-gateway
    sectionName: http-listener
  hostnames:
  - "${DOMAIN}"
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /.well-known/acme-challenge/
    backendRefs:
    - name: ${SOLVER_SVC}
      port: 8089
